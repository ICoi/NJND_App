<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ico.njnd_app"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContentListActivity"
            android:label="@string/title_activity_content_list" >
        </activity>
        <activity
            android:name=".ClothListActivity"
            android:label="@string/title_activity_cloth_list" >
        </activity>
        <activity
            android:name=".ContentPageActivity"
            android:label="@string/title_activity_content_page" >
        </activity>
        <activity
            android:name=".MenuListActivity"
            android:label="@string/title_activity_menu_list" >
        </activity>
        <activity
            android:name=".ReplyPageActivity"
            android:label="@string/title_activity_reply_page" >
        </activity>
        <activity
            android:name=".HotFashionActivity"
            android:label="@string/title_activity_cloth" >
        </activity>
    </application>

</manifest>
