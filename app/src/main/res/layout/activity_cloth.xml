<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ico.njnd_app.ClothActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nexts"
        android:id="@+id/btn_cloth_goNext"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_cloth_person_shape"
        android:layout_below="@+id/btn_cloth_goNext"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:background="@mipmap/people_shape" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgbtn_cloth_head"
        android:background="@mipmap/cloth_bg"
        android:layout_alignTop="@+id/img_cloth_person_shape"
        android:layout_toRightOf="@+id/btn_cloth_goNext"
        android:layout_toEndOf="@+id/btn_cloth_goNext"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imgbtn_cloth_shirts"
        android:background="@mipmap/cloth_bg"
        android:layout_below="@+id/imgbtn_cloth_head"
        android:layout_alignLeft="@+id/img_cloth_person_shape"
        android:layout_alignStart="@+id/img_cloth_person_shape"
        android:layout_alignRight="@+id/img_cloth_person_shape"
        android:layout_alignEnd="@+id/img_cloth_person_shape" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imgbtn_cloth_pants"
        android:background="@mipmap/cloth_bg"
        android:layout_alignBottom="@+id/img_cloth_person_shape"
        android:layout_alignRight="@+id/img_cloth_person_shape"
        android:layout_alignEnd="@+id/img_cloth_person_shape"
        android:layout_below="@+id/imgbtn_cloth_shirts" />
</RelativeLayout>
