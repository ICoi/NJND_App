<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id = "@+id/layout_grid_view">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:background="@mipmap/content_menu_cell_bg" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textURL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:text="New Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textDate"
        android:layout_below="@id/textTitle"
        android:layout_alignLeft="@id/textTitle"
        android:layout_alignStart="@id/textTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textWriter"
        android:layout_alignTop="@+id/textDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>