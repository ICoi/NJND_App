<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Menu List"
        android:id="@+id/text_menu_list_title"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="278dp"
        android:id="@+id/scrollView"
        android:paddingBottom="10dp"
        android:layout_weight="0.18">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id = "@+id/gridLayout_activity_menu"
            android:layout_weight="2.16">

            <Button
                android:layout_width="132dp"
                android:layout_height="150dp"
                android:text="Content"
                android:id="@+id/btn_menu_list_goContentList"
                android:layout_gravity="right|center_horizontal"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_marginLeft="60dp" />

            <Button
                android:layout_width="131dp"
                android:layout_height="150dp"
                android:text="Cloth"
                android:id="@+id/btn_menu_list_goClothList"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_columnSpan="7"
                android:layout_gravity="left|center_horizontal" />

            <Button
                android:layout_width="132dp"
                android:layout_height="150dp"
                android:text="Content"
                android:id="@+id/testContent"
                android:layout_gravity="right|center_horizontal"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_marginLeft="60dp" />

        </GridLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before"
        android:id="@+id/btn_menu_list_goBefore"
        android:layout_gravity="right"
        android:layout_row="18"
        android:layout_column="13"
        android:layout_marginTop="40dp" />

</LinearLayout>