<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_menu_list_title"
        android:background="@mipmap/bg_title"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_menu_list_title_bar"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/bg_title_bar"
        android:layout_below="@id/image_menu_list_title"
        android:layout_marginTop="17dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:id="@+id/categoryLabel"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_above="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:fillViewport="true"
        android:layout_below="@id/img_menu_list_title_bar"
        android:layout_alignLeft="@id/categoryLabel"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:layout_alignStart="@+id/image_menu_list_title">

        <LinearLayout
            android:id="@+id/linearLayout_activity_content_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:layout_below="@+id/img_menu_list_title_bar"
            android:layout_alignLeft="@+id/categoryLabel"
            android:layout_alignStart="@+id/categoryLabel"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContentPage"
        android:id="@+id/btn_content_list_goNext"
        android:layout_gravity="right"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_content_list_goBefore"
        android:layout_toStartOf="@+id/btn_content_list_goBefore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before"
        android:id="@+id/btn_content_list_goBefore"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/btn_content_list_goNext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>